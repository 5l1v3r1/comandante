<div class="row">
    <div class="col-md-12">
        <h2 class="mt-5">Requests</h2>
        <table class="table-sm">
            <thead class="small">
                <tr>
                    <th>Request</th>
                    <th>TimeUtc</th>
                    <th>User</th>
                    <th>TraceIdentifier</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model.Requests)
                {
                    <tr>
                        <td>@request.Request.Method @request.Request.Path</td>
                        <td>@request.DateTime.NowUtc</td>
                        <td>@request.Identity?.Name</td>
                        <td><a href="/debug/Request?TraceIdentifier=@(request.TraceIdentifier)">@request.TraceIdentifier</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>