                <form method="post" class="mt-4 mb-4">
                    <button name="ClearRequests" value="ClearRequests" class="btn btn-default btn-sm" type="submit">Clear requests</button>
                </form>
            </div>
        </div>
        <table class="table-sm">
            <thead>
                <tr>
                    <th class="small">Request</th>
                    <th class="small">TimeUtc</th>
                    <th class="small">User</th>
                    <th class="small">TraceIdentifier</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model.Requests)
                {
                    <tr>
                        <td>@request.RequestMethod @request.RequestPath</td>
                        <td>@request.DateTime.NowUtc</td>
                        <td>@request.Identity?.Name</td>
                        <td><a href="/debug/Request?TraceIdentifier=@(request.TraceIdentifier)">@request.TraceIdentifier</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>