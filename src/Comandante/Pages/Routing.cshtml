<ul class="breadcrumb">
    <li>MVC<br /></li>
    <li>
        <div class="tab-buttons">
            <a href="@Url.Link("/Hosting", new { })" class="tab-button">HOSTING</a>
            <a href="@Url.Link("/Routing", new { })" class="tab-button active">ROUTING</a>
            <a href="@Url.Link("/Services", new { })" class="tab-button">SERVICES</a>
        </div>
    </li>
</ul>


@if (Model.Routes != null)
{
    <table>
        <thead class="small">
            <tr>
                <th>Route Template</th>
                <th>Controller</th>
                <th>Action</th>
                <th>Constraints/Verbs</th>
                <th>Name</th>
                <th>Parameters</th>
                <th>RouteValues</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var route in Model.Routes)
            {

                <tr>
                    <td>@route.Template</td>
                    <td>@route.Controller</td>
                    <td>@route.Action</td>
                    <td>@route.Constraint</td>
                    <td>@route.Name</td>
                    <td>@route.Parameters</td>
                    <td>@route.RouteValues</td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div>Sorry, cannot get service IActionDescriptorCollectionProvider, that provides routing information.</div>
}


