@using System;
@using System.Linq;
@using  Comandante;
@using  Comandante.Services;

@if (Model.FieldInfo.FieldType == typeof(string))
{
    <input name="@Model.Name" value="@Value" />
}

@if (Model.FieldInfo.FieldType == typeof(DateTime) || Model.FieldInfo.FieldType == typeof(?DateTime))
{
    <input name="@Model.Name" value="@Value" type="datetime-local" />
}