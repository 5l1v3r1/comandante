@using System;
@using System.Linq;
@using  Comandante;
@using  Comandante.Services;

@if (Model.Field.FieldInfo.FieldType == typeof(string) || Model.Field.FieldInfo.FieldType.IsNumericType())
{
    <input name="@Model.Field.Name" value="@Model.Value" style="min-width: 250px" />
}

@if (Model.Field.FieldInfo.FieldType == typeof(bool))
{
    <input name="@Model.Field.Name" value="True" type="checkbox" @(@Model.Value == "True" ? "checked" : "")/>
}

@if (Model.Field.FieldInfo.FieldType == typeof(bool?))
{
    <select name="@Model.Field.Name"  style="min-width: 250px">
        <option value="">Not specofied</option>
        <option value="True" @(@Model.Value == "True" ? "selected" : "")>True</option>
        <option value="False" @(@Model.Value == "False" ? "selected" : "")>False</option>
    </select>
}

@if (Model.Field.FieldInfo.FieldType == typeof(DateTime) || Model.Field.FieldInfo.FieldType == typeof(DateTime?) || Model.Field.FieldInfo.FieldType == typeof(DateTimeOffset) || Model.Field.FieldInfo.FieldType == typeof(DateTimeOffset?))
{
    <input name="@Model.Field.Name" value="@Model.Value" type="datetime-local"  style="min-width: 250px" />
}