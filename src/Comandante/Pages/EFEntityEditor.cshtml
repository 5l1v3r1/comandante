<ul class="breadcrumb">
    <li><a href="@Url.Link("/EF", new { })" >EntityFramework</a></li>
    <li><a href="@Url.Link("/EFContext", new { _dbContext = Model.DbContext })"><span class="small text-muted">DbContext: </span>@(Model.DbContext)</a></li>
    <li><a href="@Url.Link("/EFEntity", new { _dbContext = Model.DbContext, _entity = Model.EntityName })"><span class="small text-muted">Entity: </span>@Model.EntityNamePart2</a></li>
    <li>@(Model.IsUpdate ? "Update" : "Create")</li>
</ul>

<form autocomplete="off" method="post">
    <input name="_dbContext" value="@Model.DbContext" type="hidden" />
    <input name="_entity" value="@Model.Entity?.ClrTypeName" type="hidden" />
    <table class="form">
        @foreach (var field in @Model.FieldsWithValues)
        {
            <tr>
                <td>@field.Field.Name</td>
                <td>@RenderPartialView("_FieldEditor", @field)</td>
            </tr>
        }
    </table>
    <br />
    @if (Model.Errors != null && Model.Errors.Count > 0)
    {
        <div class="errors">Please check the following errors:</div>
        <ul class="errors">
            @foreach (var error in Model.Errors)
            {
                <li>@error</li>
            }
        </ul>
    }
    @if (Model.Warnings != null && Model.Warnings.Count > 0)
    {
        <div class="warnings">Please check the following warnings:</div>
        <ul class="warnings">
            @foreach (var warning in Model.Warnings)
            {
                <li>@warning</li>
            }
        </ul>
    }
    
    <button name="_submit">Save Changes</button>
</form>
<br />
<br />
<a href="@Url.Link("/EFEntity", new { _dbContext = Model.DbContext, _entity = Model.Entity.ClrTypeName })">
    Go To Entity
</a>